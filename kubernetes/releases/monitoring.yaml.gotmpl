namespace: monitoring

prometheus:
  enabled: true
  persistence:
    storageClass: openebs-hostpath
    size: 30Gi

loki:
  enabled: true
  persistence:
    storageClass: openebs-hostpath
    size: 20Gi

promtail:
  enabled: true

grafana:
  enabled: true
  admin:
    user: admin
    password: "{{ .Values.secrets.grafanaPassword }}"
  persistence:
    storageClass: openebs-hostpath
    size: 5Gi

ingress:
  enabled: true
  hosts:
    prometheus:
      host: prometheus.{{ .Values.infra.host }}.local
    loki:
      host: loki.{{ .Values.infra.host }}.local
    grafana:
      host: grafana.{{ .Values.infra.host }}.local

consul:
  enabled: true
  host: "consul.consul.svc.cluster.local"
