namespace: vault

server:
  replicaCount: 3
  ha:
    enabled: true
    replicas: 3
  dataStorage:
    storageClass: openebs-hostpath
    size: 30Gi
  auditStorage:
    storageClass: openebs-hostpath
    size: 10Gi

ui:
  enabled: true

ingress:
  enabled: true
  host: vault.{{ .Values.infra.host }}.local

consul:
  enabled: true
  host: "consul.consul.svc.cluster.local"

injector:
  enabled: true
