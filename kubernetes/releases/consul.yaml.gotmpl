namespace: consul

server:
  replicas: 3
  persistence:
    storageClass: openebs-hostpath
    size: 1Gi

ui:
  enabled: true

connectInject:
  enabled: true
  default: false

ingress:
  enabled: true
  hosts:
    - host: consul.{{ .Values.infra.host }}.local
      paths:
        - path: /
          pathType: Prefix

agentConfig:
  datacenter: dc1
  domain: consul
  enableCentralizedConfig: true

metrics:
  enabled: true
