# Example Terraform variables for local infrastructure
# Copy this file to terraform.tfvars and fill in your values

local_servers = [
  {
    name       = "k8s-master-1"
    hostname   = "k8s-master-1.local"
    ip_address = "192.168.1.10"
    role       = "master"
    ssh_user   = "admin"
    ssh_key    = "~/.ssh/id_rsa"
  },
  {
    name       = "k8s-worker-1"
    hostname   = "k8s-worker-1.local"
    ip_address = "192.168.1.11"
    role       = "worker"
    ssh_user   = "admin"
    ssh_key    = "~/.ssh/id_rsa"
  }
]

local_clients = [
  {
    name       = "dev-machine-1"
    hostname   = "dev-machine-1.local"
    ip_address = "192.168.1.20"
    ssh_user   = "developer"
    ssh_key    = "~/.ssh/id_rsa"
  }
]





