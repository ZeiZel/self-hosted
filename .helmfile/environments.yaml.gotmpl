templates:
  .default: &default
    missingFileHandler: Info
    values:
      # Apps
      - kubernetes/apps/*.*
      # Env
      - kubernetes/envs/{{ .Environment.Name }}/*.*
      # Values
      - kubernetes/envs/{{ .Environment.Name }}/values/*.*
    secrets:
      # Secrets
      - kubernetes/envs/{{ .Environment.Name }}/secrets/*.*

environments:
  k8s:
    <<: *default
