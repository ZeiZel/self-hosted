# Ansible Inventory File
# Copy this file to hosts.ini and fill in your actual host information
# hosts.ini is in .gitignore and will not be committed to git

[vps]
# VPS server for Pangolin server deployment
# Example:
# server ansible_host=192.168.1.99 ansible_user=root ansible_port=22

[local]
# Local machine for Pangolin client deployment
# Example:
# client ansible_host=192.168.1.99 ansible_user=admin ansible_port=22

[k8s_masters]
# Kubernetes master nodes
# Example:
# master1 ansible_host=192.168.1.10 ansible_user=admin ansible_port=2678

[k8s_workers]
# Kubernetes worker nodes
# Example:
# worker1 ansible_host=192.168.1.20 ansible_user=admin ansible_port=2678

[clients]
# Additional client machines
# Example:
# client1 ansible_host=192.168.1.30 ansible_user=admin ansible_port=2678

# Group variables
[vps:vars]
pangolin_role=server
pangolin_domain=yourdomain.com
pangolin_admin_email=admin@yourdomain.com

[local:vars]
pangolin_role=client
pangolin_server_endpoint=yourdomain.com

[k8s_masters:vars]
# Kubernetes master node variables

[k8s_workers:vars]
# Kubernetes worker node variables

[clients:vars]
pangolin_role=client
pangolin_server_endpoint=yourdomain.com

