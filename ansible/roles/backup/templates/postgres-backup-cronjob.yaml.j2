---
apiVersion: batch/v1
kind: CronJob
metadata:
  name: postgres-backup
  namespace: {{ database_backups_namespace }}
spec:
  schedule: "{{ postgres_backup_schedule }}"
  successfulJobsHistoryLimit: 3
  failedJobsHistoryLimit: 3
  concurrencyPolicy: Forbid
  jobTemplate:
    spec:
      template:
        spec:
          restartPolicy: OnFailure
          containers:
            - name: postgres-backup
              image: postgres:17-alpine
              command:
                - /bin/sh
                - -c
                - |
                  set -e
                  BACKUP_DATE=$(date +%Y%m%d_%H%M%S)
                  BACKUP_FILE="/backups/postgres_${BACKUP_DATE}.sql.gz"

                  echo "Starting PostgreSQL backup..."
                  pg_dumpall -h postgresql.db.svc.cluster.local -U ${POSTGRES_USER} | gzip > ${BACKUP_FILE}

                  echo "Backup completed: ${BACKUP_FILE}"
                  ls -lh /backups/

                  # Cleanup old backups (keep last {{ postgres_backup_retention_days }} days)
                  find /backups -name "postgres_*.sql.gz" -type f -mtime +{{ postgres_backup_retention_days }} -delete
                  echo "Old backups cleaned up"
              env:
                - name: POSTGRES_USER
                  value: "postgres"
                - name: PGPASSWORD
                  valueFrom:
                    secretKeyRef:
                      name: postgresql
                      key: postgres-password
              volumeMounts:
                - name: backup-storage
                  mountPath: /backups
          volumes:
            - name: backup-storage
              persistentVolumeClaim:
                claimName: postgres-backup-pvc
