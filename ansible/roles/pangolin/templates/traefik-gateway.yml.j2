---
# Traefik Edge Router Configuration (Gateway VPS)
# Generated by Ansible

# Global configuration
global:
  checkNewVersion: false
  sendAnonymousUsage: false

# Entry points
entryPoints:
  web:
    address: ":{{ traefik_http_port }}"
    http:
      redirections:
        entryPoint:
          to: websecure
          scheme: https
          permanent: true

  websecure:
    address: ":{{ traefik_https_port }}"
    http:
      tls:
        certResolver: letsencrypt
        domains:
          - main: {{ vault.domain }}
            sans:
              - "*.{{ vault.domain }}"

  traefik:
    address: ":{{ traefik_dashboard_port }}"

# Certificate resolvers
certificatesResolvers:
  letsencrypt:
    acme:
      email: {{ vault.tls.letsencrypt.email }}
      storage: {{ traefik_config_dir }}/acme.json
      httpChallenge:
        entryPoint: web

# API and dashboard
api:
  dashboard: true
  insecure: false

# Ping health check
ping:
  entryPoint: traefik

# Logging
log:
  level: INFO
  filePath: /var/log/traefik/traefik.log
  format: json

# Access logs
accessLog:
  filePath: /var/log/traefik/access.log
  format: json
  bufferingSize: 100

# Metrics
metrics:
  prometheus:
    addEntryPointsLabels: true
    addRoutersLabels: true
    addServicesLabels: true
    entryPoint: traefik

# Providers
providers:
  # File provider for dynamic configuration
  file:
    directory: {{ traefik_config_dir }}/dynamic
    watch: true

  # HTTP provider for cluster backend routing
  http:
    endpoint: "http://{{ wireguard_server_ip }}:8081/traefik-config"
    pollInterval: 10s
    pollTimeout: 5s

# Experimental features
experimental:
  http3: true

# Server transport configuration
serversTransport:
  insecureSkipVerify: false
  maxIdleConnsPerHost: 200

# Host resolver
hostResolver:
  cnameFlattening: true
  resolvConfig: /etc/resolv.conf
  resolvDepth: 5
