services:
  gerbil:
    image: fosrl/gerbil:{{ gerbil_version }}
    container_name: gerbil
    restart: unless-stopped
    command:
      - --reachableAt=http://gerbil:3004
      - --generateAndSaveKeyTo=/var/config/key
      - --remoteConfig=https://{{ pangolin_server_endpoint }}/api/v1/
    volumes:
      - ./config/:/var/config
    cap_add:
      - NET_ADMIN
      - SYS_MODULE
    network_mode: host

networks:
  default:
    driver: bridge
    name: pangolin-client
